<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.ey.e2s</groupId>
		<artifactId>e2smodules</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>e2sasyncexec</artifactId>
	<dependencies>
		<dependency>
			<groupId>org.springframework.data</groupId>
			<artifactId>spring-data-jpa</artifactId>
			<exclusions>
				<exclusion>
					<groupId>org.springframework.boot</groupId>
					<artifactId>spring-boot-starter-logging</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-data-jpa</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter</artifactId>
		</dependency>
		<dependency>
			<groupId>com.ey.e2s</groupId>
			<artifactId>e2seycore</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.ey.e2s</groupId>
			<artifactId>e2sasyncjobhandlers</artifactId>
			<version>${project.version}</version>
		</dependency>
		<!-- <dependency> <groupId>net.javacrumbs.shedlock</groupId> <artifactId>shedlock-provider-jdbc-template</artifactId> 
			<version>${shedlock-provider-jdbc-template}</version> </dependency> -->
		<dependency>
			<groupId>net.javacrumbs.shedlock</groupId>
			<artifactId>shedlock-spring</artifactId>
			<version>${shedlock-spring}</version>
		</dependency>
		<dependency>
			<groupId>com.microsoft.sqlserver</groupId>
			<artifactId>mssql-jdbc</artifactId>
			<version>${mssql-jdbc}</version>
		</dependency>
		<!-- https://mvnrepository.com/artifact/com.google.guava/guava -->
		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
			<version>${guava}</version>
			
		</dependency>
		<!-- https://mvnrepository.com/artifact/org.apache.commons/commons-collections4 -->
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-collections4</artifactId>
			<version>${commons-collections4}</version>
		</dependency>
		<dependency>
			<groupId>net.javacrumbs.shedlock</groupId>
			<artifactId>shedlock-provider-jdbc-template</artifactId>
			<version>${shedlock-provider-jdbc-template}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>com.spotify</groupId>
				<artifactId>dockerfile-maven-plugin</artifactId>
				 <executions>
				        <execution>
				          <id>default</id>
					  <phase>package</phase>
				          <goals>
				            <goal>build</goal>
				          </goals>
				        </execution>
				        <execution>
				          <id>tag-latest</id>
				          <goals>
				            <goal>tag</goal>
				            <goal>push</goal>
				          </goals>
				          <configuration>
				            <tag>${project.build.finalName}</tag>
				          </configuration>
				        </execution>
				        <execution>
				          <id>tag-version</id>
				          <goals>
				            <goal>tag</goal>
				          </goals>
				          <configuration>
				            <tag>${project.build.finalName}</tag>
				          </configuration>
				        </execution>
				    </executions>
				    <configuration>
					 <dockerDirectory>.</dockerDirectory>
					 <serverId>${docker-serverId}</serverId>
	      				 <registryUrl>${docker-registry-url}</registryUrl>
					 <repository>${docker-repository}</repository>
				        <tag>${project.build.finalName}</tag>
				        <useMavenSettingsForAuth>true</useMavenSettingsForAuth>
				        <skip>${docker.skip}</skip>
					<entryPoint>["java", "-jar", "/${project.build.finalName}.jar"]</entryPoint>
					<resources>
					   <resource>
					     <targetPath>/</targetPath>
					     <directory>${project.build.directory}</directory>
					     <include>${project.build.finalName}.jar</include>
					   </resource>
					</resources>
				    </configuration>
           		 </plugin>
		</plugins>
	</build>
</project>
